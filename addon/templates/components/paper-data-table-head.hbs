<thead class="md-head">
	<tr class="md-row">
		{{#unless selectable}}
			<th class="md-column md-checkbox-column" style="display:none;"></th>
		{{/unless}}
		{{yield (hash
			column=(component 'paper-data-table-column'
				sortChanged=onSortChanged
				currentProp=(readonly sortProp)
				sortDir=(readonly sortDir)
			)
		)}}
	</tr>
</thead>
{{#if headersWormhole}}
	<EmberWormhole @destinationElement={{headersWormhole}}>
	<tr id="hidden-row" style="visibility: hidden;">
		{{yield (hash
			column=(component 'paper-data-table-column'
				sortChanged=onSortChanged
				currentProp=(readonly sortProp)
				sortDir=(readonly sortDir)
			)
		)}}
	</tr>
	</EmberWormhole>
{{/if}}
